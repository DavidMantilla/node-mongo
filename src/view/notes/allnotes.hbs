<div class="row">
    

    {{#each notes}}
        <div class="col-md-3">

            <div class="card">

                <div class="card-body">

                    <form
                        action="/notes/delete/{{_id}}?_method=DELETE"
                        method="POST"
                        class="d-flex justify-content-end align-items-center"
                        style="margin:0px;position:absolute;top:-2px;width: 95%;"
                    >
                        <input type="hidden" name="_method" value="DELETE" />
                        <a href="/notes/edit/{{_id}}"><span
                                class="far fa-edit text-primary"
                                style="margin-right:1px"
                            ></span></a>
                        <button type="submit" class="btn btn-link"><span
                                class="fas fa-trash text-danger"
                            ></span></button></form>
                    <h4 class="card-title">
                        {{title}}
                    </h4>
                    <hr />

                    <p>{{description}}</p>
                </div>
            </div>
        </div>
    {{else}}

        <div class="col-md-3 mx-auto">

            <div class="card">

                <div class="card-body">

                    <h4 class="card-title">
                        !No hay notas!
                    </h4>
                    <hr />
                    <a href="/notes/add" class="btn btn-info btn-block">Crea una</a>

                </div>
            </div>
        </div>
    {{/each}}
</div>